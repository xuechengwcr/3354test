<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="qmui_round_btn_border_color">@color/colorAccent</item>
        <item name="qmui_round_btn_text_color">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="pop_add_ainm" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">#2196F3</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">#2196F3</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- 按钮样式 -->
        <item name="android:buttonStyle">@style/buttonStyle</item>
        <item name="android:displayOptions" />
        <!-- SearchView样式-->
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
        <!-- bottomSheet样式 -->

        <!--spinner样式-->
        <!--item name="android:spinnerStyle">@style/CustomSpinnerStyle</item-->
        <!--progressBar样式-->
        <item name="android:progressBarStyle">@style/MyProgressBarStyle</item>
    </style>
    <style name="MyProgressBarStyle" parent="android:style/Widget.Material.ProgressBar.Large">
    </style>
    <style name="BottomSheet.Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:textColor">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#DD000000</item>
        <item name="android:textColorSecondary">#8A000000</item>
        <item name="android:textColorHint">#42000000</item>

    </style>
    <style name="BottomSheet"/>
    <style name="BottomSheet.Animation">

    </style>
    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#8Affff</item>
        <item name="android:textColorHint">#42ffff</item>

    </style>
    <style name="buttonStyle" parent="android:style/Widget.Material.Button">
        <item name="android:background">#2196F3</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="voiceIcon">@drawable/ic_keyboard_voice_white</item>
    </style>
</resources>
